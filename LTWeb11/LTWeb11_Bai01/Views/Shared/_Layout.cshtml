<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BookStore</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Thêm Font Awesome cho biểu tượng -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        :root {
            --primary-color: #4e73df;
            --secondary-color: #1cc88a;
            --accent-color: #f8f9fc;
            --text-color: #5a5c69;
            --shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
        }

        body {
            background-color: #f8f9fa;
            color: var(--text-color);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            box-shadow: var(--shadow);
            padding: 0.75rem 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            color: var(--primary-color) !important;
        }

        .nav-link {
            font-weight: 500;
            padding: 0.5rem 1rem !important;
            border-radius: 0.35rem;
            transition: all 0.3s;
        }

        .nav-link:hover {
            background-color: rgba(78, 115, 223, 0.1);
            color: var(--primary-color) !important;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
            overflow: hidden;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow);
        }

        .card-header {
            border-bottom: none;
            padding: 1rem 1.25rem;
            font-weight: 600;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu li {
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .sidebar-menu li:last-child {
            border-bottom: none;
        }

        .sidebar-menu a {
            display: block;
            padding: 0.75rem 1.25rem;
            color: var(--text-color);
            text-decoration: none;
            transition: all 0.2s;
        }

        .sidebar-menu a:hover {
            background-color: rgba(78, 115, 223, 0.1);
            color: var(--primary-color);
            padding-left: 1.5rem;
        }

        .sidebar-menu a i {
            margin-right: 0.5rem;
            width: 1.2rem;
            text-align: center;
        }

        .main-content {
            min-height: calc(100vh - 200px);
        }

        .footer {
            background-color: #fff;
            box-shadow: 0 -0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
            margin-top: 2rem;
        }

        /* Hiệu ứng loading cho menu */
        .menu-loading {
            padding: 0.75rem 1.25rem;
            color: #6c757d;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.25rem;
            }

            .card {
                margin-bottom: 1rem;
            }
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "Home")">
                <i class="fas fa-book me-2"></i>BookStore
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
                    aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">
                            <i class="fas fa-home me-1"></i>Trang chủ
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("About", "Home")">
                            <i class="fas fa-info-circle me-1"></i>Giới thiệu
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Contact", "Home")">
                            <i class="fas fa-envelope me-1"></i>Liên hệ
                        </a>
                    </li>
                </ul>

                <!-- Search Form -->
                <form class="d-flex me-2" method="get" action="@Url.Action("Search","Home")">
                    <div class="input-group">
                        <input class="form-control" type="search" placeholder="Tìm kiếm sách..." aria-label="Search" name="searchString">
                        <button class="btn btn-outline-primary" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </form>

                <!-- User Actions -->
                <div class="d-flex">
                    <a href="#" class="btn btn-outline-primary me-2">
                        <i class="fas fa-shopping-cart"></i>
                    </a>
                    <a href="@Url.Action("Index","KhachHang")" class="btn btn-primary">
                        <i class="fas fa-user me-1"></i>Đăng nhập
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container main-content" style="padding-top: 100px;">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 col-md-4 mb-4">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-list me-2"></i>Danh mục Chủ Đề</h5>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="card-body p-0">
                        <div id="chuDeMenu">
                            <!-- Hiển thị loading khi đang tải -->
                            <div class="menu-loading text-center">
                                <i class="fas fa-spinner fa-spin me-2"></i>Đang tải...
                            </div>
                            <!-- Nội dung menu sẽ được render ở đây -->
                        </div>
                    </div>
                </div>

                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-building me-2"></i>Danh mục Nhà Xuất Bản</h5>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                    <div class="card-body p-0">
                        <div id="nxbMenu">
                            <!-- Hiển thị loading khi đang tải -->
                            <div class="menu-loading text-center">
                                <i class="fas fa-spinner fa-spin me-2"></i>Đang tải...
                            </div>
                            <!-- Nội dung menu sẽ được render ở đây -->
                        </div>
                    </div>
                </div>

                <!-- Bộ lọc -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Bộ lọc</h5>
                    </div>

                    <div class="card-body">
                        <form action="@Url.Action("SearchWithPrice","Home")" method="get">

                            <div class="mb-3">
                                <label for="searchString" class="form-label fw-bold">Tên sản phẩm</label>
                                <input type="search" class="form-control" id="searchString" name="searchString" placeholder="Từ khóa....">
                            </div>

                            <div class="mb-3">
                                <label for="chuDeId" class="form-label fw-bold">Chủ đề</label>
                                <select class="form-select" id="chuDeId" name="chuDeId">
                                    <option value="1" selected>Công nghệ thông tin</option>
                                    <option value="2">Văn học</option>
                                    <option value="3">Kinh tế</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Giá</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="0-10000" id="price1" name="priceRange">
                                    <label class="form-check-label" for="price1">
                                        0-10.000 VNĐ
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="11000-20000" id="price2" name="priceRange">
                                    <label class="form-check-label" for="price2">
                                        11.000-20.000 VNĐ
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="21000-40000" id="price3" name="priceRange">
                                    <label class="form-check-label" for="price3">
                                        21.000-40.000 VNĐ
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" value="40001" id="price4" name="priceRange">
                                    <label class="form-check-label" for="price4">
                                        Lớn hơn 40.000 VNĐ
                                    </label>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Tìm</button>
                            </div>

                        </form>
                    </div>
                </div>


                <!-- Banner quảng cáo hoặc thông báo -->
                <div class="card shadow-sm bg-warning text-dark">
                    <div class="card-body text-center">
                        <h6><i class="fas fa-gift me-2"></i>Khuyến mãi đặc biệt</h6>
                        <p class="small mb-0">Giảm 20% cho đơn hàng đầu tiên</p>
                    </div>
                </div>
            </div>

            <!-- Main Content Area -->
            <div class="col-lg-9 col-md-8">
                <!-- Breadcrumb (tuỳ chọn) -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb bg-white px-3 py-2 rounded shadow-sm">
                        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li class="breadcrumb-item active">@ViewBag.Title</li>
                    </ol>
                </nav>

                <!-- Main Content -->
                <main role="main">
                    @if (IsSectionDefined("Banner"))
                    {
                        @RenderSection("Banner")
                    }
                    <div class="card shadow-sm">
                        <div class="card-body"> 
                            @RenderBody()
                        </div>
                    </div>
                </main>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer border-top mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-4 mb-md-0">
                    <h5 class="fw-bold mb-3"><i class="fas fa-book me-2"></i>BookStore</h5>
                    <p class="small">Nơi tìm kiếm và khám phá thế giới sách phong phú với nhiều thể loại đa dạng.</p>
                    <div class="social-links">
                        <a href="#" class="text-decoration-none me-2"><i class="fab fa-facebook fa-lg"></i></a>
                        <a href="#" class="text-decoration-none me-2"><i class="fab fa-twitter fa-lg"></i></a>
                        <a href="#" class="text-decoration-none me-2"><i class="fab fa-instagram fa-lg"></i></a>
                    </div>
                </div>
                <div class="col-md-2 mb-4 mb-md-0">
                    <h6 class="fw-bold">Liên kết</h6>
                    <ul class="list-unstyled small">
                        <li><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Trang chủ</a></li>
                        <li><a href="@Url.Action("About", "Home")" class="text-decoration-none">Giới thiệu</a></li>
                        <li><a href="@Url.Action("Contact", "Home")" class="text-decoration-none">Liên hệ</a></li>
                    </ul>
                </div>
                <div class="col-md-3 mb-4 mb-md-0">
                    <h6 class="fw-bold">Hỗ trợ</h6>
                    <ul class="list-unstyled small">
                        <li><a href="#" class="text-decoration-none">Câu hỏi thường gặp</a></li>
                        <li><a href="#" class="text-decoration-none">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-decoration-none">Điều khoản sử dụng</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="fw-bold">Liên hệ</h6>
                    <ul class="list-unstyled small">
                        <li><i class="fas fa-map-marker-alt me-2"></i> 123 Đường Sách, TP.HCM</li>
                        <li><i class="fas fa-phone me-2"></i> (0123) 456-789</li>
                        <li><i class="fas fa-envelope me-2"></i> info@bookstore.vn</li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center">
                <p class="small mb-0">&copy; @DateTime.Now.Year - BookStore Application. All rights reserved.</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

<script>
    $(document).ready(function() {
        // 1. Tải nội dung Partial View cho Chủ Đề bằng AJAX
        $('#chuDeMenu').load('@Url.Action("DSMenu_ChuDe", "Home")');

        // 2. Tải nội dung Partial View cho Nhà Xuất Bản bằng AJAX
        $('#nxbMenu').load('@Url.Action("DSMenu_NXB", "Home")');

        // --- BẮT ĐẦU THAY THẾ ---
        // 3. Hiệu ứng click mượt mà bằng CSS
        $(document).on('click', '.collapsible-trigger', function() {
            // Xoay icon mũi tên
            $(this).find('.fa-chevron-down').toggleClass('fa-rotate-180');

            // Thêm/xóa class 'is-collapsed' trên .card-body liền kề
            $(this).next('.card-body.collapsible').toggleClass('is-collapsed');
        });
        // --- KẾT THÚC THAY THẾ ---
    });
</script>

    @RenderSection("scripts", required: false)
</body>
</html>
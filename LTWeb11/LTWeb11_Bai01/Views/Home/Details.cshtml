@model LTWeb11_Bai01.Models.Sach
@{
    ViewBag.Title = Model.TenSach;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4 text-center">
        <img src="@Url.Content("~/Content/images/" + Model.AnhBia)"
             class="img-fluid rounded shadow-sm"
             alt="@Model.TenSach"
             style="max-height: 450px; border: 1px solid #eee;">
    </div>

    <div class="col-md-8">
        <h1 class="h2 fw-bold" style="color: var(--primary-color);">@Model.TenSach</h1>

        <hr>

        <h2 class="display-6 text-danger fw-bold">@String.Format("{0:N0} đ", Model.GiaBan)</h2>

        <hr>

        <ul class="list-group list-group-flush fs-5">
            <li class="list-group-item px-0">
                <strong style="min-width: 150px; display: inline-block;">
                    <i class="fas fa-tag fa-fw me-2 text-muted"></i>Chủ đề:
                </strong>
                <a href="@Url.Action("SachTheoChuDe", "BookStore", new { id = Model.MaChuDe })" class="text-decoration-none">
                    @Model.ChuDe.TenChuDe
                </a>
            </li>
            <li class="list-group-item px-0">
                <strong style="min-width: 150px; display: inline-block;">
                    <i class="fas fa-print fa-fw me-2 text-muted"></i>Nhà xuất bản:
                </strong>
                <a href="@Url.Action("SachTheoNXB", "BookStore", new { id = Model.MaNXB })" class="text-decoration-none">
                    @Model.NhaXuatBan.TenNXB
                </a>
            </li>
            <li class="list-group-item px-0">
                <strong style="min-width: 150px; display: inline-block;">
                    <i class="fas fa-calendar-alt fa-fw me-2 text-muted"></i>Ngày cập nhật:
                </strong>
                @String.Format("{0:dd/MM/yyyy}", Model.NgayCapNhat)
            </li>
            <li class="list-group-item px-0">
                <strong style="min-width: 150px; display: inline-block;">
                    <i class="fa-solid fa-boxes-stacked me-2 text-muted"></i>Số lượng tồn:
                </strong>
                @Model.SoLuongTon
            </li>
            <li class="list-group-item px-0">
                <strong style="min-width: 150px; display: inline-block;">
                    <i class="fa-solid fa-user-edit me-2 text-muted"></i>Tác giả:
                </strong>
                <a href="@Url.Action("")" class="text-decoration-none">
                    @ViewBag.TenTG
                </a>
            </li>
        </ul>

        <hr>

        <div class="mt-4">
            <a href="#" class="btn btn-primary btn-lg shadow">
                <i class="fas fa-shopping-cart me-2"></i>
                Thêm vào giỏ hàng
            </a>
        </div>
    </div>
</div>

<div class="row mt-5">
    <div class="col-12">
        <h3 class="fw-bold mb-3">Mô tả sách</h3>
        <div class="p-3" style="background-color: #f8f9fa; border-radius: 5px; border: 1px solid #eee;">
            <p>@Html.Raw(Model.MoTa)</p>
        </div>
    </div>
</div>

<div class="mt-4">
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-outline-secondary" })
</div>